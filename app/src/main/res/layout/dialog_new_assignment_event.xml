<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.salas.javiert.magicmirror.Objects.bindableObjects.bindableAssignment"/>
    </data>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/fadeBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@android:color/black"
            android:layerType="hardware"
            android:visibility="gone"/>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:weightSum="1"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="25dp">


            <EditText
                android:id="@+id/etDialogNewAssignmentName"
                android:layout_width="0dp"
                android:layout_height="67dp"

                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:hint="@string/DefaultAssignmentName"
                android:text="@={data.name}"
                android:textColor="@color/AlmostBlack"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="@+id/textView6"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/tbDialogNewAssignmentToolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/etDialogNewAssignmentDate"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginLeft="0dp"
                android:ems="10"
                android:focusable="false"
                app:layout_constraintBaseline_toBaselineOf="@+id/etDialogNewAssignmentTime"
                app:layout_constraintLeft_toLeftOf="@+id/tvDialogNewAssignmentDue"/>

            <EditText
                android:id="@+id/etDialogNewAssignmentTime"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:focusable="false"
                android:inputType="time"
                app:layout_constraintLeft_toRightOf="@+id/etDialogNewAssignmentDate"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDialogNewAssignmentDue"/>

            <TextView
                android:id="@+id/tvDialogNewAssignmentDue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="7dp"
                android:ems="10"
                android:gravity="start"
                android:inputType="textPersonName"
                android:text="Due"
                android:textAlignment="inherit"
                android:textSize="24sp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/etDialogNewAssignmentName"
                app:layout_constraintRight_toLeftOf="@+id/cbDialogNewAssignmentAllday"
                app:layout_constraintTop_toBottomOf="@+id/etDialogNewAssignmentName"/>

            <TextView
                android:id="@+id/tvDialogNewAssignmentClass"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:gravity="start"
                android:inputType="textPersonName"
                android:text="Class"
                android:textAlignment="textStart"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="@+id/tvDialogNewAssignmentDue"
                app:layout_constraintTop_toBottomOf="@+id/etDialogNewAssignmentDate"/>

            <Spinner
                android:id="@+id/spDialogNewAssignmentClassSelector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/tvDialogNewAssignmentClass"
                app:layout_constraintRight_toRightOf="@+id/etDialogNewAssignmentTime"
                app:layout_constraintTop_toBottomOf="@+id/tvDialogNewAssignmentClass"/>

            <TextView
                android:id="@+id/tvDialogNewAssignmentNotificationText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="16dp"
                android:text="Set a reaminder"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="@+id/tvDialogNewAssignmentClass"
                app:layout_constraintTop_toBottomOf="@+id/spDialogNewAssignmentClassSelector"/>

            <Spinner
                android:id="@+id/spDialogNewAssignmentTimeInterval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/textView4"
                app:layout_constraintRight_toRightOf="@+id/spDialogNewAssignmentClassSelector"
                app:layout_constraintTop_toBottomOf="@+id/textView4"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/textView4"
                app:layout_constraintRight_toRightOf="@+id/spDialogNewAssignmentClassSelector"
                app:layout_constraintTop_toBottomOf="@+id/textView5"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="Minutes before event"
                app:layout_constraintLeft_toLeftOf="@+id/tvDialogNewAssignmentNotificationText"
                app:layout_constraintTop_toBottomOf="@+id/tvDialogNewAssignmentNotificationText"/>

            <CheckBox
                android:id="@+id/cbDialogNewAssignmentAllday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="0dp"
                android:text="All day"
                app:layout_constraintHorizontal_bias="0.666"
                app:layout_constraintLeft_toLeftOf="@+id/etDialogNewAssignmentTime"
                app:layout_constraintRight_toRightOf="@+id/etDialogNewAssignmentTime"
                app:layout_constraintTop_toTopOf="@+id/tvDialogNewAssignmentDue"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:text="Intervals"
                app:layout_constraintLeft_toLeftOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/spinner"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:text="Title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tbDialogNewAssignmentToolbar"/>

        </android.support.constraint.ConstraintLayout>
    </FrameLayout>
</layout>