<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.salas.javiert.magicmirror.Objects.bindableObjects.bindableAssignment"/>
    </data>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/fadeBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@android:color/black"
            android:layerType="hardware"
            android:visibility="gone"/>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:weightSum="1"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="25dp">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginRight="0dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tbDialogNewAssignmentToolbar"
                app:srcCompat="@color/bg_screen"/>

            <EditText
                android:id="@+id/etDialogNewAssignmentName"
                android:layout_width="0dp"
                android:layout_height="67dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="8dp"

                android:hint="@string/DefaultAssignmentName"
                android:text="@={data.name}"
                android:textColor="@color/AlmostBlack"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintLeft_toRightOf="@+id/ivDialogNewAssignmentItemIndicator"
                app:layout_constraintRight_toRightOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/tbDialogNewAssignmentToolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/etDialogNewAssignmentDate"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:focusable="false"
                app:layout_constraintLeft_toLeftOf="@+id/ivDialogNewAssignmentItemIndicator"
                app:layout_constraintTop_toBottomOf="@+id/tvDialogNewAssignmentDue"/>

            <EditText
                android:id="@+id/etDialogNewAssignmentTime"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:focusable="false"
                android:inputType="time"
                app:layout_constraintBaseline_toBaselineOf="@+id/etDialogNewAssignmentDate"
                app:layout_constraintLeft_toRightOf="@+id/etDialogNewAssignmentDate"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tvDialogNewAssignmentDue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="21dp"
                android:ems="10"
                android:gravity="start"
                android:inputType="textPersonName"
                android:text="Due"
                android:textAlignment="textStart"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="@+id/etDialogNewAssignmentName"
                app:layout_constraintTop_toBottomOf="@+id/etDialogNewAssignmentName"/>

            <TextView
                android:id="@+id/tvDialogNewAssignmentClass"
                android:layout_width="80dp"
                android:layout_height="14dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:gravity="start"
                android:inputType="textPersonName"
                android:text="Class"
                android:textAlignment="textStart"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="@+id/tvDialogNewAssignmentDue"
                app:layout_constraintTop_toBottomOf="@+id/etDialogNewAssignmentDate"/>

            <Spinner
                android:id="@+id/spDialogNewAssignmentClassSelector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="@+id/etDialogNewAssignmentDate"
                app:layout_constraintRight_toRightOf="@+id/etDialogNewAssignmentTime"
                app:layout_constraintTop_toBottomOf="@+id/tvDialogNewAssignmentClass"/>

            <TextView
                android:id="@+id/tvDialogNewAssignmentNotificationText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-8dp"
                android:text="Remind me before due"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="@+id/tvDialogNewAssignmentClass"
                tools:layout_editor_absoluteY="379dp"/>

            <Spinner
                android:id="@+id/spDialogNewAssignmentTimeInterval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/spDialogNewAssignmentClassSelector"
                app:layout_constraintRight_toRightOf="@+id/spDialogNewAssignmentClassSelector"
                app:layout_constraintTop_toBottomOf="@+id/tvDialogNewAssignmentNotificationText"/>

            <ImageView
                android:id="@+id/ivDialogNewAssignmentItemIndicator"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="50dp"
                app:layout_constraintLeft_toLeftOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2"
                app:srcCompat="@android:drawable/ic_dialog_info"/>

        </android.support.constraint.ConstraintLayout>
    </FrameLayout>
</layout>